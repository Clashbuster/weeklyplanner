

<!-- Side navigation -->
<div class="sidenav">
      <h1>Change plan</h1>

     

      <ul> <%= button_to "Plans", plans_path , :method => :get %> <br /></ul>
      <ul> <%= button_to "Account", account_path(session[:user_id]) , :method => :get %> </ul>

      
         
    </div>
    
    <!-- Page content -->
    <div class="main">
                  
         <%= form_for @plan do |f| %> <br />

         <%= f.label :location%> <br />
         <%= f.text_field :location %> <br />
      
         <%= f.label :name%> <br />
         <%= f.text_field :name %> <br />
      
         <%= f.label :day %> <br />
         <%= f.select :day, options_for_select(Plan.possible_days) %> <br />
      
      
         <%= f.label :description%> <br />
         <%= f.text_area :description%> <br />
      
         <%= f.submit "Sumbit"%>
      <%end%> <br />

</div>